<table class="table">
    <thead>
      <tr>
        <th ><span>Email</span></th>
        <th ><span>Nombre</span></th>
        <th ><span>Apellido</span></th>
        <th ><span>Tel√©fono</span></th>
        <th ><span>Estado</span></th>  
        <th ><span>Fecha Ingreso</span></th>
        <th ><span>Agregado por</span></th>
        <th ><span>Opciones</span></th>       
      </tr>
    </thead>
    <tbody>
      <% @leads.each do |lead| %>
        <tr>
          <td> <%= lead.email %> </td>
          <td> <%= lead.first_name %> </td>
          <td> <%= lead.last_name %> </td>
          <td> <%= lead.phone_number %> </td>
          <td> <%= lead.status %> </td>
          <td> <%= lead.created_at.strftime("%Y-%m-%d") %> </td>
          <td> <%= lead.user.email %> </td>
          <td> <%= link_to 'Ver', @lead %> |
              <%= link_to 'Editar', edit_lead_path(lead) %>   </td>
        </tr>
      <% end %>
    </tbody>
</table>


